!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Song Guessing Game
    = csrf_meta_tags
    %link{:href => "https://maxcdn.bootstrapcdn.com/bootswatch/3.3.7/journal/bootstrap.min.css", :rel => "stylesheet"}/
    %link{:href => "../css/main.css", :rel => "stylesheet"}/
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    .container
    - if current_user
      %ul
        %li= current_user.email
        %li= link_to "Log out", logout_path, method: "delete"
    - else
      %ul
        %li= link_to "Login", 'login'
        %li= link_to "Signup", 'signup'
    .container
      = yield
